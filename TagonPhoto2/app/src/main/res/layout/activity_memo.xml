<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lifeistech.android.tagonphoto.MemoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/removeArea"
            android:layout_weight="1"
            android:background="#a0a0a0"
            android:text="Remove Tag"
            android:gravity="center"
            android:textSize="30sp"/>

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.lifeistech.android.tagonphoto.MyImageView
                android:id="@+id/tag1"
                android:layout_height="80dp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="300dp"
                android:src ="@drawable/fusen1"
                android:layout_width="140dp" />

            <com.lifeistech.android.tagonphoto.MyImageView
                android:id="@+id/tag0"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="300dp"
                android:src ="@drawable/fusen0"
                android:layout_width="140dp" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>
